<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - SPA Example</title>

    <!-- Bootstrap CSS (optional if not using a custom framework) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    @*<link href="~/Content/Site.css" rel="stylesheet" />*@
    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- jQuery and Bootstrap Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div id="wrapper">
        <div class="overlay"></div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <!-- Hamburger Icon for Sidebar -->
                <button type="button" class="hamburger animated fadeInLeft is-closed" data-toggle="offcanvas">
                    <span class="hamb-top"></span>
                    <span class="hamb-middle"></span>
                    <span class="hamb-bottom"></span>
                </button>

                <!-- Brand Name -->
                <a class="navbar-brand ms-5" href="#">My Website</a>

                <!-- Search Bar -->
                <form class="d-flex ms-auto me-3">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>

                <!-- Links in the Navbar -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link 1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link 2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link 3</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <nav class="navbar navbar-inverse fixed-top" id="sidebar-wrapper" role="navigation">
            <ul class="nav sidebar-nav">
                <div class="sidebar-header">
                    <div class="sidebar-brand">
                        <a href="#">Brand</a>
                    </div>
                </div>

                <li><a href="#" class="nav-link" data-page="Home/Introduction">Introduction</a></li>
                <li><a href="#" class="nav-link" data-page="Home/DataTable1">Data Table 1</a></li>
                <li><a href="#" class="nav-link" data-page="Home/DataTable2">Data Table 2</a></li>
                <li><a href="#" class="nav-link" data-page="Home/TelementryIndex">TelementryIndex</a></li>
                <li><a href="#" class="nav-link" data-page="Home/ChartConfig">ChartConfig</a></li>

                <li><a href="#team">Team</a></li>
                <li class="dropdown">
                    <a href="#works" class="dropdown-toggle" data-toggle="dropdown">Works <span class="caret"></span></a>
                    <ul class="dropdown-menu animated fadeInLeft" role="menu">
                        <div class="dropdown-header">Dropdown heading</div>
                        <li><a href="#pictures">Pictures</a></li>
                        <li><a href="#videos">Videos</a></li>
                        <li><a href="#books">Books</a></li>
                        <li><a href="#art">Art</a></li>
                        <li><a href="#awards">Awards</a></li>
                    </ul>
                </li>
                <li><a href="#services">Services</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="#followme">Follow me</a></li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- Top Navbar -->
            <!-- Body content goes here -->
            <div class="container">
                <div class="content">
                    @RenderBody() <!-- Page content will be injected here -->
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Custom Sidebar Toggle Script -->
    <script>
        $(document).ready(function () {
            var trigger = $('.hamburger'),
                overlay = $('.overlay'),
                isClosed = false;

            trigger.click(function () {
                hamburger_cross();
            });

            function hamburger_cross() {
                if (isClosed == true) {
                    overlay.hide();
                    trigger.removeClass('is-open');
                    trigger.addClass('is-closed');
                    isClosed = false;
                } else {
                    overlay.show();
                    trigger.removeClass('is-closed');
                    trigger.addClass('is-open');
                    isClosed = true;
                }
            }

            // Toggle sidebar on hamburger icon click
            $('[data-toggle="offcanvas"]').click(function () {
                $('#wrapper').toggleClass('toggled');
            });

            // SPA Handling: Load page content dynamically using AJAX
            $('.nav-link').click(function (e) {
                e.preventDefault();

                var page = $(this).data('page'); // Get the page name from data-page attribute

                // Load the page content via AJAX
                $.ajax({
                    url: '/' + page, // Assumes the page corresponds to an MVC action
                    method: 'GET',
                    success: function (data) {
                        $('.content').html(data); // Replace the content in the main content area
                    },
                    error: function () {
                        $('.content').html('<p>Error loading page.</p>');
                    }
                });
            });
        });
    </script>
    @RenderSection("Scripts", required:false)
</body>
</html>
